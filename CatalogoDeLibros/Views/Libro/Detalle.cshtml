@model CatalogoDeLibros.Models.Libro

@if (ViewBag.Mensaje != null)
{
	<div class="alert alert-success">@ViewBag.Mensaje</div>
}

<h2>Detalles del Libro</h2>

<div>
	<h3>@Model.titulo</h3>
	<a asp-action="Editar" asp-route-id="@Model.id" class="btn btn-warning">
		<i class="bi bi-pencil"></i> Editar
	</a>
	<a asp-action="Eliminar" asp-route-id="@Model.id" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este libro?');">
        <i class="bi bi-trash"></i> Eliminar
    </a><br />
	<br />

		<img src="@Model.UrlImagen" alt="Portada de @Model.titulo" width="80" />
		<p><strong>Autor:</strong> @Model?.autor?.nombre</p>
		<p><strong>Año de Publicación:</strong> @Model?.anioPublicacion</p>
		<a asp-controller="Libro" asp-action="Index" class="btn btn-secondary">Volver al catalogo</a>
</div>