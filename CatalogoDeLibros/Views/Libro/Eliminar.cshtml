@model CatalogoDeLibros.Models.Libro

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3 style="color: red">¿Está seguro que quiere eliminar este libro?</h3>
<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class = "col-sm-2">
            Año de publicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.anioPublicacion)
        </dd>
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.autor.nombre)
        </dd>
        <dt class = "col-sm-2">
            Portada
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.UrlImagen" alt="Portada de @Model.titulo" width="80" />
        </dd>
    </dl>
    
    <form asp-action="ConfirmarEliminar">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" />
        <a asp-controller="Libro" asp-action="Detalle" asp-route-id="@Model.id" class="btn btn-success">Cancelar</a>
    </form>
</div>
